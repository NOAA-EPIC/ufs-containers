#!/bin/bash
set -x
export SINGULARITYENV_FI_PROVIDER=tcp
export SINGULARITY_SHELL=/bin/bash
export SINGULARITYENV_PREPEND_PATH="/opt/ufs-srweather-app/container-bin"
img="IMAGE"
cmd=$(basename "$0")
arg="$@"
echo running: singularity exec "${img}" $cmd $arg
PATH_TO_SINGULARITY exec -B /BINDDIR -B /LOCDIR -B /ROCOTODIR "${img}" $cmd $arg

